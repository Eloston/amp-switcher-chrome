{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "AMP Switcher",
  "version": "0.1",
  "short_name": "ampswitcher",
  "author": "Eloston",
  "background": {
    "scripts": [
      "core/helpers.js",
      "core/stateManager.js",
      "core/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core/content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": {
      "38": "icons/icon38.png"
    },
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/default16.png",
    "48": "icons/default48.png",
    "128": "icons/default.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
